.container
  .col-xs-12
    = simple_form_for [@church, @location] do |f|
      = f.input :town
      = f.input :buildings_of_england_volume, collection: ["Suffolk"], prompt: "Select Buildings of England Volume"
      = f.input :county, collection: ["Suffolk", "Other"], prompt: "Select County"
      = f.input :diocese, collection: ["Norwich", "Other"], prompt: "Select Diocese"
      = f.input :archdeaconry
      = f.input :latitude
      = f.input :longitude
      = f.button :submit, "Add Church"
